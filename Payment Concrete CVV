// Kelas konkret PembayaranKartuKredit
class PembayaranKartuKredit extends Pembayaran {
    private String nomorKartuKredit;
    private String tanggalKedaluwarsa;

    public PembayaranKartuKredit(int idPembayaran, String namaPelanggan, double jumlahPembayaran, String nomorKartuKredit, String tanggalKedaluwarsa) {
        super(idPembayaran, namaPelanggan, jumlahPembayaran);
        this.metodePembayaran = "Kartu Kredit";
        this.nomorKartuKredit = nomorKartuKredit;
        this.tanggalKedaluwarsa = tanggalKedaluwarsa;
    }

    @Override
    public String getMetodePembayaran() {
        return metodePembayaran;
    }

    public String getNomorKartuKredit() {
        return nomorKartuKredit;
    }

    public String getTanggalKedaluwarsa() {
        return tanggalKedaluwarsa;
    }
}
